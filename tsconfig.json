{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "mobiledoc-vdom-renderer/*" : ["*"]
    },
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["ES2015"]
  },
  "exclude": ["node_modules", "dist"]
}
