{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "es5",
    "module": "CommonJS",
    "lib": ["ES2015"],
    "moduleResolution": "Node",
    "outDir": "dist",
    "declaration": false
  },
  "exclude": ["node_modules"]
}
